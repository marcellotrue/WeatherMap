<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.marcellosouza.weathermap.view.activity.CityActivity">

    <TextView
        android:text="@string/city"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/textCity"/>

    <TextView
        android:text="@string/m_xima_c"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textMaxima" />

    <TextView
        android:text="@string/m_nima_c"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMaxima"
        android:layout_alignLeft="@+id/textMaxima"
        android:layout_marginTop="20dp"
        android:id="@+id/textMinima" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Weather description: "
        android:layout_below="@id/textMinima"
        android:layout_alignLeft="@+id/textMaxima"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        />

    <TextView
        android:text="@string/timeDescription"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDescicao"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/textDescription"
        android:layout_toRightOf="@id/textDescription"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textMaxima"
        android:layout_toRightOf="@id/textMaxima"
        android:layout_marginLeft="10dp"
        android:id="@+id/resultMaxi" />

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textMinima"
        android:layout_toRightOf="@id/textMinima"
        android:layout_marginLeft="10dp"
        android:id="@+id/resultMin" />

</RelativeLayout>
